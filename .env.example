# Tariffik Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# RAILS CORE
# =============================================================================
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
# SECRET_KEY_BASE=generate-with-bin/rails-secret  # Only needed in production
# RAILS_MASTER_KEY=your-master-key  # Only needed in production

# App host (used for URL generation in emails, Turbo Streams, etc.)
# APP_HOST=localhost:3000  # Development
# APP_HOST=tariffik.com  # Production

# =============================================================================
# DATABASE
# =============================================================================
# DATABASE_URL=postgres://user:password@host:5432/database  # Production only

# =============================================================================
# INBOUND EMAIL (Resend)
# =============================================================================
INBOUND_EMAIL_DOMAIN=inbound.tariffik.com
RESEND_API_KEY=re_your-resend-api-key
RESEND_WEBHOOK_SECRET=whsec_your-webhook-signing-secret

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude API (commodity code suggestions and email classification)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Tavily API (AI web search for product details)
TAVILY_API_KEY=tvly-your-tavily-api-key

# =============================================================================
# WEB SCRAPING
# =============================================================================
# ScrapingBee API (optional - for scraping protected websites)
SCRAPINGBEE_API_KEY=your-scrapingbee-api-key

# =============================================================================
# CLOUDFLARE R2 STORAGE
# =============================================================================
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=tariffik-images
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
