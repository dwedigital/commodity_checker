# Tariffik Environment Variables
# ================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# For local development: dotenv-rails auto-loads this
# For Kamal deployment: source .env && kamal deploy -d production

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude API (required - commodity code suggestions)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Tavily API (optional - AI web search for product details)
TAVILY_API_KEY=tvly-your-key-here

# =============================================================================
# EMAIL (RESEND)
# =============================================================================
RESEND_API_KEY=re_your-key-here
RESEND_WEBHOOK_SECRET=whsec_your-secret-here
INBOUND_EMAIL_DOMAIN=inbound.tariffik.com

# =============================================================================
# CLOUDFLARE R2 STORAGE
# =============================================================================
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-access-key

# =============================================================================
# WEB SCRAPING (OPTIONAL)
# =============================================================================
SCRAPINGBEE_API_KEY=your-key-here
