<div class="md:flex md:items-center md:justify-between mb-8">
  <div class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
      API Dashboard
    </h2>
    <p class="mt-1 text-sm text-gray-500">Manage your API keys and monitor usage</p>
  </div>
</div>

<% if flash[:api_key_created] %>
  <div class="rounded-md bg-green-50 p-4 mb-6">
    <div class="flex">
      <div class="shrink-0">
        <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium text-green-800">API Key Created</h3>
        <div class="mt-2">
          <p class="text-sm text-green-700 mb-2">Copy your API key now. It won't be shown again:</p>
          <div data-controller="clipboard" class="bg-white rounded px-3 py-2 border border-green-200">
            <div class="flex items-center justify-between gap-2">
              <code data-clipboard-target="source" class="font-mono text-sm text-green-900 break-all"><%= flash[:api_key_created] %></code>
              <button data-action="clipboard#copy" class="shrink-0 text-green-600 hover:text-green-800">
                <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Usage Stats -->
<% if @active_keys&.any? && @usage_stats %>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-5 mb-8">
    <div class="overflow-hidden rounded-lg bg-white px-3 py-3 shadow sm:px-4 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Today</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-semibold tracking-tight text-gray-900">
        <%= @usage_stats[:requests_today] %><span class="text-sm font-normal text-gray-500">/<%= @usage_stats[:limit_today] || 'âˆž' %></span>
      </dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-3 py-3 shadow sm:px-4 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">This Month</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-semibold tracking-tight text-gray-900"><%= @usage_stats[:requests_this_month] %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-3 py-3 shadow sm:px-4 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Rate Limit</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-semibold tracking-tight text-gray-900"><%= @usage_stats[:limit_per_minute] %><span class="text-sm font-normal text-gray-500">/min</span></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-3 py-3 shadow sm:px-4 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Tier</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-semibold tracking-tight text-indigo-600 capitalize"><%= @active_keys.first.tier %></dd>
    </div>
  </div>
<% end %>

<!-- API Keys -->
<div class="bg-white shadow rounded-lg mb-8">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <h3 class="text-base font-semibold leading-6 text-gray-900">API Keys</h3>
      <%= form_with url: create_api_key_path, method: :post, class: "flex items-center gap-3" do |f| %>
        <div class="relative">
          <%= f.text_field :name, placeholder: "Key name (optional)", class: "block w-44 sm:w-52 rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
        <%= f.submit "Create Key", class: "rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <% if @api_keys.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Key</th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Created</th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @api_keys.each do |key| %>
            <tr class="<%= key.active? ? '' : 'bg-gray-50 opacity-60' %>">
              <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900"><%= key.name || "Unnamed" %></td>
              <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500 font-mono"><%= key.display_key %></td>
              <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell"><%= key.created_at.strftime("%d %b %Y") %></td>
              <td class="px-4 py-3 whitespace-nowrap">
                <% if key.active? %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Active</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">Revoked</span>
                <% end %>
              </td>
              <td class="px-4 py-3 whitespace-nowrap text-right text-sm">
                <% if key.active? %>
                  <%= button_to "Revoke", revoke_api_key_path(key), method: :delete, data: { turbo_confirm: "Are you sure? This cannot be undone." }, class: "text-red-600 hover:text-red-900 font-medium" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-4 py-12 text-center">
      <svg class="mx-auto size-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No API keys</h3>
      <p class="mt-1 text-sm text-gray-500">Create your first API key to get started.</p>
    </div>
  <% end %>
</div>

<!-- Recent API Requests -->
<% if @api_keys.any? %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Requests</h3>
        <% if @api_keys.count > 1 %>
          <div class="flex items-center gap-3" data-controller="select-redirect">
            <label for="key_filter" class="text-sm font-medium text-gray-700">Filter:</label>
            <select id="key_filter" data-action="change->select-redirect#navigate" class="block rounded-md border-0 py-2 pl-3 pr-8 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
              <option value="<%= developer_path %>" <%= 'selected' unless @selected_key %>>All keys</option>
              <% @api_keys.each do |key| %>
                <option value="<%= developer_path(key_id: key.id) %>" <%= 'selected' if @selected_key&.id == key.id %>>
                  <%= key.name || key.display_key %>
                </option>
              <% end %>
            </select>
          </div>
        <% end %>
      </div>
    </div>

    <% if @recent_requests&.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <% if @api_keys.count > 1 && !@selected_key %>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Key</th>
              <% end %>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Endpoint</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Method</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Time</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">When</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_requests.each do |req| %>
              <tr>
                <% if @api_keys.count > 1 && !@selected_key %>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                    <%= req.api_key&.name || req.api_key&.display_key || "-" %>
                  </td>
                <% end %>
                <td class="px-4 py-3 text-sm text-gray-900 font-mono text-xs">
                  <%= req.endpoint.gsub('/api/v1/', '') %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell"><%= req.method %></td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <% status_class = case req.status_code
                     when 200..299 then "bg-green-100 text-green-800"
                     when 400..499 then "bg-yellow-100 text-yellow-800"
                     else "bg-red-100 text-red-800"
                     end %>
                  <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium <%= status_class %>"><%= req.status_code %></span>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                  <%= req.response_time_ms ? "#{req.response_time_ms}ms" : "-" %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500"><%= time_ago_in_words(req.created_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-4 py-12 text-center">
        <svg class="mx-auto size-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No requests yet</h3>
        <p class="mt-1 text-sm text-gray-500">API requests will appear here once you start using your keys.</p>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Quick Start Guide -->
<div class="mt-8 rounded-lg bg-gray-50 px-4 py-5 sm:p-6">
  <h3 class="text-base font-semibold text-gray-900 mb-3">Quick Start</h3>
  <div class="prose prose-sm text-gray-600">
    <p class="mb-2">Use your API key in the Authorization header:</p>
    <pre class="bg-gray-800 text-gray-100 rounded-md p-3 text-xs overflow-x-auto"><code>curl -X POST https://tariffik.com/api/v1/commodity-codes/suggest \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{"description": "Cotton t-shirt, blue"}'</code></pre>
  </div>
</div>
