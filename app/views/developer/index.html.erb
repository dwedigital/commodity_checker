<div class="md:flex md:items-center md:justify-between mb-8">
  <div class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-brand-dark sm:truncate sm:text-3xl sm:tracking-tight">
      API Dashboard
    </h2>
    <p class="mt-1 text-sm text-gray-500">Manage your API keys and monitor usage</p>
  </div>
</div>

<% if flash[:api_key_created] %>
  <div class="rounded-2xl bg-brand-mint/30 border border-brand-mint p-4 mb-6">
    <div class="flex">
      <div class="shrink-0">
        <div class="inline-flex items-center justify-center rounded-xl bg-brand-mint size-10">
          <svg class="size-5 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
      <div class="ml-4 flex-1">
        <h3 class="text-sm font-semibold text-brand-dark">API Key Created</h3>
        <div class="mt-2">
          <p class="text-sm text-gray-600 mb-2">Copy your API key now. It won't be shown again:</p>
          <div data-controller="clipboard" class="bg-white rounded-xl px-3 py-2 border border-brand-mint">
            <div class="flex items-center justify-between gap-2">
              <code data-clipboard-target="source" class="font-mono text-sm text-brand-dark break-all"><%= flash[:api_key_created] %></code>
              <button data-action="clipboard#copy" class="shrink-0 text-brand-dark hover:text-brand-dark/70 transition-colors">
                <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Usage Stats -->
<% if @active_keys&.any? && @usage_stats %>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-5 mb-8">
    <div class="overflow-hidden rounded-2xl bg-white px-4 py-4 border border-gray-200 sm:px-5 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Today</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-bold tracking-tight text-brand-dark">
        <%= @usage_stats[:requests_today] %><span class="text-sm font-normal text-gray-500">/<%= @usage_stats[:limit_today] || 'âˆž' %></span>
      </dd>
    </div>
    <div class="overflow-hidden rounded-2xl bg-white px-4 py-4 border border-gray-200 sm:px-5 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">This Month</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-bold tracking-tight text-brand-dark"><%= @usage_stats[:requests_this_month] %></dd>
    </div>
    <div class="overflow-hidden rounded-2xl bg-white px-4 py-4 border border-gray-200 sm:px-5 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Rate Limit</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-bold tracking-tight text-brand-dark"><%= @usage_stats[:limit_per_minute] %><span class="text-sm font-normal text-gray-500">/min</span></dd>
    </div>
    <div class="overflow-hidden rounded-2xl bg-white px-4 py-4 border border-gray-200 sm:px-5 sm:py-5">
      <dt class="truncate text-xs sm:text-sm font-medium text-gray-500">Tier</dt>
      <dd class="mt-1 text-xl sm:text-2xl font-bold tracking-tight text-primary capitalize"><%= @active_keys.first.tier %></dd>
    </div>
  </div>
<% end %>

<!-- API Keys -->
<div class="bg-white rounded-2xl border border-gray-200 overflow-hidden mb-8">
  <div class="px-5 py-4 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <h3 class="text-base font-semibold leading-6 text-brand-dark">API Keys</h3>
      <%= form_with url: create_api_key_path, method: :post, class: "flex items-center gap-3" do |f| %>
        <div class="relative">
          <%= f.text_field :name, placeholder: "Key name (optional)", class: "block w-44 sm:w-52 rounded-xl border border-gray-200 py-2.5 px-4 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm" %>
        </div>
        <%= f.submit "Create Key", class: "rounded-full bg-primary px-4 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover transition-colors cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <% if @api_keys.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-brand-dark">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Key</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white hidden sm:table-cell">Created</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Status</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 bg-white">
          <% @api_keys.each do |key| %>
            <tr class="hover:bg-gray-50 transition-colors <%= key.active? ? '' : 'opacity-60' %>">
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-semibold text-brand-dark sm:pl-6"><%= key.name || "Unnamed" %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 font-mono"><%= key.display_key %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 hidden sm:table-cell"><%= key.created_at.strftime("%d %b %Y") %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <% if key.active? %>
                  <span class="inline-flex items-center rounded-full bg-brand-mint px-2.5 py-0.5 text-xs font-medium text-brand-dark">Active</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-medium text-primary">Revoked</span>
                <% end %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <% if key.active? %>
                  <%= button_to "Revoke", revoke_api_key_path(key), method: :delete, data: { turbo_confirm: "Are you sure? This cannot be undone." }, class: "text-primary hover:text-primary-hover font-semibold transition-colors" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-5 py-12 text-center">
      <div class="inline-flex items-center justify-center rounded-xl bg-gray-100 size-14 mb-4">
        <svg class="size-7 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
        </svg>
      </div>
      <h3 class="text-sm font-semibold text-brand-dark">No API keys</h3>
      <p class="mt-1 text-sm text-gray-500">Create your first API key to get started.</p>
    </div>
  <% end %>
</div>

<!-- Extension Tokens -->
<div class="bg-white rounded-2xl border border-gray-200 overflow-hidden mb-8">
  <div class="px-5 py-4 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold leading-6 text-brand-dark">Browser Extension</h3>
        <p class="text-sm text-gray-500 mt-1">Manage connected browser extension devices</p>
      </div>
      <a href="https://chrome.google.com/webstore/detail/tariffik" target="_blank" class="inline-flex items-center rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-brand-dark border border-gray-200 hover:bg-gray-50 transition-colors">
        <svg class="mr-2 size-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 4.8a7.2 7.2 0 110 14.4 7.2 7.2 0 010-14.4z"/>
          <circle cx="12" cy="12" r="3.6"/>
        </svg>
        Get Extension
      </a>
    </div>
  </div>

  <% if @extension_tokens.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-brand-dark">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white hidden sm:table-cell">Created</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white hidden md:table-cell">Last Used</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Status</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 bg-white">
          <% @extension_tokens.each do |token| %>
            <tr class="hover:bg-gray-50 transition-colors <%= token.active? ? '' : 'opacity-60' %>">
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-semibold text-brand-dark sm:pl-6"><%= token.name || "Chrome Extension" %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 hidden sm:table-cell"><%= token.created_at.strftime("%d %b %Y") %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 hidden md:table-cell">
                <% if token.last_used_at %>
                  <%= time_ago_in_words(token.last_used_at) %> ago
                <% else %>
                  Never
                <% end %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <% if token.active? %>
                  <span class="inline-flex items-center rounded-full bg-brand-mint px-2.5 py-0.5 text-xs font-medium text-brand-dark">Active</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-medium text-primary">Revoked</span>
                <% end %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <% if token.active? %>
                  <%= button_to "Revoke", revoke_extension_token_path(token), method: :delete, data: { turbo_confirm: "This will sign out your browser extension. Continue?" }, class: "text-primary hover:text-primary-hover font-semibold transition-colors" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-5 py-12 text-center">
      <div class="inline-flex items-center justify-center rounded-xl bg-gray-100 size-14 mb-4">
        <svg class="size-7 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 002.25-2.25V6a2.25 2.25 0 00-2.25-2.25H6A2.25 2.25 0 003.75 6v2.25A2.25 2.25 0 006 10.5zm0 9.75h2.25A2.25 2.25 0 0010.5 18v-2.25a2.25 2.25 0 00-2.25-2.25H6a2.25 2.25 0 00-2.25 2.25V18A2.25 2.25 0 006 20.25zm9.75-9.75H18a2.25 2.25 0 002.25-2.25V6A2.25 2.25 0 0018 3.75h-2.25A2.25 2.25 0 0013.5 6v2.25a2.25 2.25 0 002.25 2.25z" />
        </svg>
      </div>
      <h3 class="text-sm font-semibold text-brand-dark">No extension connected</h3>
      <p class="mt-1 text-sm text-gray-500">Install our browser extension to look up commodity codes while shopping.</p>
    </div>
  <% end %>
</div>

<!-- Recent API Requests -->
<% if @api_keys.any? %>
  <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden">
    <div class="px-5 py-4 border-b border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <h3 class="text-base font-semibold leading-6 text-brand-dark">Recent Requests</h3>
        <% if @api_keys.count > 1 %>
          <div class="flex items-center gap-3" data-controller="select-redirect">
            <label for="key_filter" class="text-sm font-medium text-gray-600">Filter:</label>
            <select id="key_filter" data-action="change->select-redirect#navigate" class="block rounded-xl border border-gray-200 py-2 pl-3 pr-8 text-brand-dark focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm">
              <option value="<%= developer_path %>" <%= 'selected' unless @selected_key %>>All keys</option>
              <% @api_keys.each do |key| %>
                <option value="<%= developer_path(key_id: key.id) %>" <%= 'selected' if @selected_key&.id == key.id %>>
                  <%= key.name || key.display_key %>
                </option>
              <% end %>
            </select>
          </div>
        <% end %>
      </div>
    </div>

    <% if @recent_requests&.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-brand-dark">
            <tr>
              <% if @api_keys.count > 1 && !@selected_key %>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-6">Key</th>
              <% end %>
              <th scope="col" class="<%= @api_keys.count > 1 && !@selected_key ? 'px-3' : 'pl-4 pr-3 sm:pl-6' %> py-3.5 text-left text-sm font-semibold text-white">Endpoint</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white hidden sm:table-cell">Method</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Status</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white hidden md:table-cell">Time</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">When</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 bg-white">
            <% @recent_requests.each do |req| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <% if @api_keys.count > 1 && !@selected_key %>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-600 sm:pl-6">
                    <%= req.api_key&.name || req.api_key&.display_key || "-" %>
                  </td>
                <% end %>
                <td class="<%= @api_keys.count > 1 && !@selected_key ? 'px-3' : 'pl-4 pr-3 sm:pl-6' %> py-4 text-sm text-brand-dark font-mono text-xs">
                  <%= req.endpoint.gsub('/api/v1/', '') %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 hidden sm:table-cell"><%= req.method %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm">
                  <% case req.status_code
                     when 200..299 %>
                    <span class="inline-flex items-center rounded-full bg-brand-mint px-2.5 py-0.5 text-xs font-medium text-brand-dark"><%= req.status_code %></span>
                  <% when 400..499 %>
                    <span class="inline-flex items-center rounded-full bg-highlight px-2.5 py-0.5 text-xs font-medium text-brand-dark"><%= req.status_code %></span>
                  <% else %>
                    <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-medium text-primary"><%= req.status_code %></span>
                  <% end %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600 hidden md:table-cell">
                  <%= req.response_time_ms ? "#{req.response_time_ms}ms" : "-" %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600"><%= time_ago_in_words(req.created_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-5 py-12 text-center">
        <div class="inline-flex items-center justify-center rounded-xl bg-gray-100 size-14 mb-4">
          <svg class="size-7 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-sm font-semibold text-brand-dark">No requests yet</h3>
        <p class="mt-1 text-sm text-gray-500">API requests will appear here once you start using your keys.</p>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Quick Start Guide -->
<div class="mt-8 rounded-2xl bg-brand-dark px-5 py-5">
  <h3 class="text-base font-semibold text-white mb-3">Quick Start</h3>
  <div class="text-sm text-white/80">
    <p class="mb-3">Use your API key in the Authorization header:</p>
    <pre class="bg-white/10 text-white rounded-xl p-4 text-xs overflow-x-auto"><code>curl -X POST https://tariffik.com/api/v1/commodity-codes/suggest \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{"description": "Cotton t-shirt, blue"}'</code></pre>
  </div>
</div>
