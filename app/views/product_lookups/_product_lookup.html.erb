<div class="space-y-6">
  <% if product_lookup.pending? %>
    <!-- Loading state with progressive status messages -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6"
         data-controller="processing-status"
         data-processing-status-photo-value="<%= product_lookup.photo? %>">
      <div class="flex items-center justify-center py-8">
        <div class="text-center">
          <div class="inline-flex items-center justify-center rounded-xl bg-brand-dark size-14 mb-4">
            <svg class="size-7 text-white animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <h3 class="text-sm font-semibold text-brand-dark" data-processing-status-target="message">
            <% if product_lookup.photo? %>
              Analyzing product image...
            <% else %>
              Fetching product page...
            <% end %>
          </h3>
          <p class="mt-2 text-sm text-gray-500" data-processing-status-target="submessage">This may take a few seconds</p>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Product Details Card -->
    <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-100 flex items-center justify-between">
        <h3 class="text-base font-semibold text-brand-dark">Product Details</h3>
        <% if product_lookup.photo? %>
          <span class="inline-flex items-center rounded-full bg-brand-orange/20 px-2.5 py-1 text-xs font-medium text-brand-orange">
            <svg class="mr-1 size-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
            </svg>
            Photo Lookup (Beta)
          </span>
        <% end %>
      </div>

      <div class="p-5">
        <% if product_lookup.failed? && product_lookup.scrape_error.present? %>
          <div class="rounded-xl border border-primary/30 bg-primary/5 p-4 mb-4">
            <div class="flex items-start gap-3">
              <div class="inline-flex items-center justify-center rounded-xl bg-primary size-10 shrink-0">
                <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="pt-1">
                <p class="text-sm font-semibold text-brand-dark">Could not fetch product details</p>
                <p class="mt-1 text-sm text-gray-600"><%= product_lookup.scrape_error %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if product_lookup.partial? %>
          <div class="rounded-xl border border-brand-orange/30 bg-brand-orange/10 p-4 mb-4">
            <div class="flex items-start gap-3">
              <div class="inline-flex items-center justify-center rounded-xl bg-brand-orange size-10 shrink-0">
                <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="pt-1">
                <p class="text-sm font-semibold text-brand-dark">Limited data extracted</p>
                <p class="mt-1 text-sm text-gray-600">Some product details couldn't be retrieved. The site may require JavaScript or have blocked access.</p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex gap-6">
          <% if product_lookup.photo? && product_lookup.product_image.attached? %>
            <div class="shrink-0">
              <%= image_tag product_lookup.product_image.variant(resize_to_limit: [200, 200]), alt: product_lookup.title || "Product photo", class: "size-32 object-contain rounded-xl bg-gray-50 border border-gray-100" %>
            </div>
          <% elsif product_lookup.image_url.present? %>
            <div class="shrink-0">
              <img src="<%= product_lookup.image_url %>" alt="<%= product_lookup.title %>" class="size-32 object-contain rounded-xl bg-gray-50 border border-gray-100">
            </div>
          <% end %>

          <div class="flex-1 min-w-0">
            <dl class="space-y-3">
              <% if product_lookup.title.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Title</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= product_lookup.title %></dd>
                </div>
              <% end %>

              <% if product_lookup.brand.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Brand</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= product_lookup.brand %></dd>
                </div>
              <% end %>

              <% if product_lookup.category.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Category</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= product_lookup.category %></dd>
                </div>
              <% end %>

              <% if product_lookup.price.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Price</dt>
                  <dd class="mt-1 text-sm text-brand-dark">
                    <%= product_lookup.currency == "GBP" ? "£" : product_lookup.currency == "EUR" ? "€" : "$" %><%= product_lookup.price %>
                  </dd>
                </div>
              <% end %>

              <% if product_lookup.material.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Material</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= product_lookup.material %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <% if product_lookup.description.present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-700"><%= truncate(product_lookup.description, length: 500) %></dd>
          </div>
        <% end %>

        <% if product_lookup.url? && product_lookup.url.present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <a href="<%= product_lookup.url %>" target="_blank" rel="noopener" class="inline-flex items-center text-sm text-primary hover:text-primary-hover transition-colors">
              <svg class="mr-1.5 size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View original product page
            </a>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Commodity Code Card -->
    <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-100">
        <h3 class="text-base font-semibold text-brand-dark">Commodity Code</h3>
      </div>

      <div class="p-5">
        <% if product_lookup.commodity_code_confirmed? %>
          <div class="flex items-start gap-4">
            <div class="inline-flex items-center justify-center rounded-xl bg-brand-mint size-12 shrink-0">
              <svg class="size-6 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Confirmed Code</p>
              <p class="text-2xl font-bold text-brand-dark font-mono mt-1"><%= product_lookup.confirmed_commodity_code %></p>
            </div>
          </div>
        <% elsif product_lookup.suggested_commodity_code.present? %>
          <div class="flex items-start gap-4">
            <div class="inline-flex items-center justify-center rounded-xl bg-highlight size-12 shrink-0">
              <svg class="size-6 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Suggested Code</p>
              <p class="text-2xl font-bold text-brand-dark font-mono mt-1"><%= product_lookup.suggested_commodity_code %></p>
              <% if product_lookup.commodity_code_confidence.present? %>
                <div class="mt-2 flex items-center gap-2">
                  <div class="flex-1 h-2 bg-gray-100 rounded-full overflow-hidden max-w-[120px]">
                    <div class="h-full bg-brand-mint rounded-full" style="width: <%= product_lookup.commodity_code_confidence * 100 %>%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-600"><%= number_to_percentage(product_lookup.commodity_code_confidence * 100, precision: 0) %> confidence</span>
                </div>
              <% end %>
            </div>
          </div>
          <% if product_lookup.llm_reasoning.present? %>
            <div class="mt-4 p-4 rounded-xl bg-highlight/30 border border-highlight">
              <p class="text-sm text-gray-700 leading-relaxed"><%= product_lookup.llm_reasoning %></p>
            </div>
          <% end %>
          <div class="mt-4">
            <%= button_to "Confirm this code", confirm_commodity_code_product_lookup_path(product_lookup, commodity_code: product_lookup.suggested_commodity_code), method: :post, class: "inline-flex items-center rounded-full bg-brand-dark px-5 py-2.5 text-sm font-semibold text-white hover:bg-dark-hover transition-colors cursor-pointer" %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <div class="inline-flex items-center justify-center rounded-xl bg-gray-100 size-14 mb-4">
              <svg class="size-7 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="text-sm font-semibold text-brand-dark">No suggestion available</h3>
            <p class="mt-1 text-sm text-gray-500">We couldn't determine a commodity code for this product.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add to Order Card -->
    <% unless product_lookup.order_item.present? %>
      <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
        <div class="px-5 py-4 border-b border-gray-100">
          <h3 class="text-base font-semibold text-brand-dark">Add to Order</h3>
        </div>

        <div class="p-5">
          <% orders = product_lookup.user.orders.order(created_at: :desc).limit(10) %>
          <% if orders.any? %>
            <p class="text-sm text-gray-500 mb-4">Add this product to an existing order:</p>
            <div class="space-y-2">
              <% orders.each do |order| %>
                <%= button_to add_to_order_product_lookup_path(product_lookup, order_id: order.id), method: :post, class: "w-full text-left rounded-xl border border-gray-200 px-4 py-3 text-sm hover:bg-gray-50 transition-colors cursor-pointer" do %>
                  <span class="font-medium text-brand-dark"><%= order.retailer_name || "Order" %></span>
                  <span class="text-gray-500">
                    - <%= order.order_reference || "No reference" %>
                    (<%= order.created_at.strftime("%d %b") %>)
                  </span>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No orders yet. Create an order first to add this product to it.</p>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="rounded-2xl border border-brand-mint bg-brand-mint/20 p-4">
        <div class="flex items-center gap-3">
          <div class="inline-flex items-center justify-center rounded-xl bg-brand-mint size-10 shrink-0">
            <svg class="size-5 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
          </div>
          <p class="text-sm font-medium text-brand-dark">
            Added to order:
            <%= link_to product_lookup.order_item.order.retailer_name || "Order", order_path(product_lookup.order_item.order), class: "underline hover:text-primary transition-colors" %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
