<div class="space-y-6">
  <% if product_lookup.pending? %>
    <!-- Loading state with progressive status messages -->
    <div class="bg-white shadow rounded-lg p-6"
         data-controller="processing-status"
         data-processing-status-photo-value="<%= product_lookup.photo? %>">
      <div class="flex items-center justify-center py-8">
        <div class="text-center">
          <svg class="mx-auto size-12 text-indigo-400 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <h3 class="mt-4 text-sm font-semibold text-gray-900" data-processing-status-target="message">
            <% if product_lookup.photo? %>
              Analyzing product image...
            <% else %>
              Fetching product page...
            <% end %>
          </h3>
          <p class="mt-2 text-sm text-gray-500" data-processing-status-target="submessage">This may take a few seconds</p>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Product Details Card -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Product Details</h3>
        <% if product_lookup.photo? %>
          <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">
            <svg class="mr-1 size-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
            </svg>
            Photo Lookup (Beta)
          </span>
        <% end %>
      </div>

      <div class="px-4 py-5 sm:px-6">
        <% if product_lookup.failed? && product_lookup.scrape_error.present? %>
          <div class="rounded-md bg-red-50 p-4 mb-4">
            <div class="flex">
              <div class="shrink-0">
                <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Could not fetch product details</h3>
                <p class="mt-1 text-sm text-red-700"><%= product_lookup.scrape_error %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if product_lookup.partial? %>
          <div class="rounded-md bg-yellow-50 p-4 mb-4">
            <div class="flex">
              <div class="shrink-0">
                <svg class="size-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Limited data extracted</h3>
                <p class="mt-1 text-sm text-yellow-700">Some product details couldn't be retrieved. The site may require JavaScript or have blocked access.</p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex gap-6">
          <% if product_lookup.photo? && product_lookup.product_image.attached? %>
            <div class="shrink-0">
              <%= image_tag product_lookup.product_image.variant(resize_to_limit: [200, 200]), alt: product_lookup.title || "Product photo", class: "size-32 object-contain rounded-lg bg-gray-100" %>
            </div>
          <% elsif product_lookup.image_url.present? %>
            <div class="shrink-0">
              <img src="<%= product_lookup.image_url %>" alt="<%= product_lookup.title %>" class="size-32 object-contain rounded-lg bg-gray-100">
            </div>
          <% end %>

          <div class="flex-1 min-w-0">
            <dl class="space-y-3">
              <% if product_lookup.title.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Title</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= product_lookup.title %></dd>
                </div>
              <% end %>

              <% if product_lookup.brand.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Brand</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= product_lookup.brand %></dd>
                </div>
              <% end %>

              <% if product_lookup.category.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Category</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= product_lookup.category %></dd>
                </div>
              <% end %>

              <% if product_lookup.price.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Price</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= product_lookup.currency == "GBP" ? "£" : product_lookup.currency == "EUR" ? "€" : "$" %><%= product_lookup.price %>
                  </dd>
                </div>
              <% end %>

              <% if product_lookup.material.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Material</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= product_lookup.material %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <% if product_lookup.description.present? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= truncate(product_lookup.description, length: 500) %></dd>
          </div>
        <% end %>

        <% if product_lookup.url? && product_lookup.url.present? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <a href="<%= product_lookup.url %>" target="_blank" rel="noopener" class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500">
              <svg class="mr-1 size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View original product page
            </a>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Commodity Code Card -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Commodity Code</h3>
      </div>

      <div class="px-4 py-5 sm:px-6">
        <% if product_lookup.commodity_code_confirmed? %>
          <div class="flex items-center">
            <span class="inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-lg font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
              <svg class="mr-2 size-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <%= product_lookup.confirmed_commodity_code %>
            </span>
            <span class="ml-3 text-sm text-gray-500">Confirmed</span>
          </div>
        <% elsif product_lookup.suggested_commodity_code.present? %>
          <div class="rounded-md bg-yellow-50 p-4">
            <div class="flex items-start">
              <div class="shrink-0">
                <svg class="size-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-lg font-medium text-yellow-800">Suggested: <%= product_lookup.suggested_commodity_code %></h3>
                <% if product_lookup.commodity_code_confidence.present? %>
                  <p class="mt-1 text-sm text-yellow-700">Confidence: <%= number_to_percentage(product_lookup.commodity_code_confidence * 100, precision: 0) %></p>
                <% end %>
                <% if product_lookup.llm_reasoning.present? %>
                  <p class="mt-2 text-sm text-yellow-700"><%= product_lookup.llm_reasoning %></p>
                <% end %>
                <div class="mt-4">
                  <%= button_to "Confirm this code", confirm_commodity_code_product_lookup_path(product_lookup, commodity_code: product_lookup.suggested_commodity_code), method: :post, class: "inline-flex items-center rounded-md bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500" %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="text-center py-4">
            <svg class="mx-auto size-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">No suggestion available</h3>
            <p class="mt-1 text-sm text-gray-500">We couldn't determine a commodity code for this product.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add to Order Card -->
    <% unless product_lookup.order_item.present? %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Add to Order</h3>
        </div>

        <div class="px-4 py-5 sm:px-6">
          <% orders = product_lookup.user.orders.order(created_at: :desc).limit(10) %>
          <% if orders.any? %>
            <p class="text-sm text-gray-500 mb-4">Add this product to an existing order:</p>
            <div class="space-y-2">
              <% orders.each do |order| %>
                <%= button_to add_to_order_product_lookup_path(product_lookup, order_id: order.id), method: :post, class: "w-full text-left rounded-md border border-gray-300 px-3 py-2 text-sm hover:bg-gray-50" do %>
                  <span class="font-medium text-gray-900"><%= order.retailer_name || "Order" %></span>
                  <span class="text-gray-500">
                    - <%= order.order_reference || "No reference" %>
                    (<%= order.created_at.strftime("%d %b") %>)
                  </span>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No orders yet. Create an order first to add this product to it.</p>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="shrink-0">
            <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800">
              Added to order:
              <%= link_to product_lookup.order_item.order.retailer_name || "Order", order_path(product_lookup.order_item.order), class: "underline hover:text-green-900" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
