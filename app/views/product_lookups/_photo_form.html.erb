<%= form_with url: create_from_photo_product_lookups_path, method: :post, multipart: true, data: { controller: "camera-capture", action: "submit->camera-capture#submitForm" }, class: "p-6 space-y-6" do |f| %>
  <!-- Hidden file input for form submission -->
  <input type="file"
         id="product-image-input"
         name="product_lookup[product_image]"
         data-camera-capture-target="fileInput"
         class="hidden"
         accept="image/*"
         data-action="change->camera-capture#fileSelected">

  <!-- Hidden canvas for capturing frames -->
  <canvas data-camera-capture-target="canvas" class="hidden"></canvas>

  <!-- Camera Section -->
  <div data-camera-capture-target="cameraSection" class="hidden">
    <div class="relative bg-black rounded-xl overflow-hidden aspect-[4/3]">
      <video data-camera-capture-target="video"
             autoplay
             playsinline
             muted
             class="w-full h-full object-cover">
      </video>

      <!-- Camera controls overlay -->
      <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-4">
        <!-- Switch camera button (mobile) -->
        <button type="button"
                data-camera-capture-target="switchButton"
                data-action="click->camera-capture#switchCamera"
                class="hidden rounded-full bg-white/80 p-3 text-brand-dark hover:bg-white shadow-lg transition-colors">
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
        </button>

        <!-- Capture button -->
        <button type="button"
                data-camera-capture-target="captureButton"
                data-action="click->camera-capture#capturePhoto"
                class="rounded-full bg-white p-4 text-brand-dark hover:bg-gray-100 shadow-lg ring-4 ring-white/50 transition-colors">
          <svg class="size-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
          </svg>
        </button>

        <!-- Use file upload instead -->
        <button type="button"
                data-action="click->camera-capture#useFallback"
                class="rounded-full bg-white/80 p-3 text-brand-dark hover:bg-white shadow-lg transition-colors">
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
          </svg>
        </button>
      </div>
    </div>
    <p class="mt-2 text-center text-sm text-gray-500">Position the product in frame and tap the capture button</p>
  </div>

  <!-- Preview Section (after capture) -->
  <div data-camera-capture-target="previewSection" class="hidden">
    <div class="relative bg-gray-100 rounded-xl overflow-hidden aspect-[4/3]">
      <img data-camera-capture-target="preview"
           class="w-full h-full object-contain"
           alt="Captured product photo">
    </div>

    <div class="mt-4 flex justify-center gap-4">
      <button type="button"
              data-camera-capture-target="retakeButton"
              data-action="click->camera-capture#retake"
              class="rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-brand-dark border border-gray-200 hover:bg-gray-50 transition-colors">
        Retake Photo
      </button>
    </div>
  </div>

  <!-- Fallback Section (file upload) -->
  <div data-camera-capture-target="fallbackSection">
    <!-- Error message -->
    <div data-camera-capture-target="errorMessage" class="hidden rounded-xl bg-highlight/50 border border-highlight p-4 mb-4">
      <div class="flex">
        <div class="shrink-0">
          <div class="inline-flex items-center justify-center rounded-lg bg-brand-orange size-8">
            <svg class="size-4 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-brand-dark" data-camera-capture-target="errorText"></p>
        </div>
      </div>
    </div>

    <div class="text-center">
      <!-- Start camera button -->
      <button type="button"
              data-camera-capture-target="startButton"
              data-action="click->camera-capture#startCamera"
              class="mb-4 inline-flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-sm font-semibold text-white hover:bg-primary-hover transition-colors">
        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
        </svg>
        Use Camera
      </button>

      <div class="relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="bg-white px-2 text-sm text-gray-500">or</span>
        </div>
      </div>

      <label for="product-image-input" class="mt-4 block cursor-pointer">
        <div class="mt-2 flex justify-center rounded-xl border border-dashed border-gray-300 px-6 py-10 hover:border-gray-400 transition-colors">
          <div class="text-center">
            <svg class="mx-auto size-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
            </svg>
            <div class="mt-4 flex text-sm leading-6 text-gray-600 justify-center">
              <span class="font-semibold text-primary hover:text-primary-hover transition-colors">Upload a photo</span>
            </div>
            <p class="text-xs leading-5 text-gray-500">PNG, JPG, GIF up to 10MB</p>
          </div>
        </div>
      </label>
    </div>
  </div>

  <!-- Submit section -->
  <div class="bg-gray-50 -mx-6 -mb-6 px-6 py-4 rounded-b-2xl">
    <div class="flex items-center justify-between">
      <%= link_to "Cancel", (user_signed_in? ? product_lookups_path : root_path), class: "text-sm font-semibold text-brand-dark hover:text-brand-dark/70 transition-colors" %>
      <button type="submit"
              data-camera-capture-target="submitButton"
              class="hidden rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover transition-colors cursor-pointer">
        Analyze Product
      </button>
    </div>
  </div>
<% end %>
