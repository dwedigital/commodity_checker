<div class="max-w-3xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-brand-dark sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @scrape_result[:title].presence || "Product Lookup" %>
      </h2>
      <% if @scrape_result[:retailer_name].present? %>
        <p class="mt-1 text-sm text-gray-500"><%= @scrape_result[:retailer_name].titleize %></p>
      <% end %>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <% case @scrape_result[:status] %>
      <% when :completed %>
        <span class="inline-flex items-center rounded-full bg-brand-mint/50 px-3 py-1 text-sm font-medium text-brand-dark">Complete</span>
      <% when :partial %>
        <span class="inline-flex items-center rounded-full bg-brand-orange/20 px-3 py-1 text-sm font-medium text-brand-orange">Partial Data</span>
      <% when :failed %>
        <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Failed</span>
      <% end %>
    </div>
  </div>

  <div class="space-y-6">
    <!-- Guest notice -->
    <div class="rounded-2xl border border-highlight bg-highlight/30 p-4">
      <div class="flex items-start gap-3">
        <div class="inline-flex items-center justify-center rounded-xl bg-brand-dark size-10 shrink-0">
          <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="flex-1 md:flex md:justify-between md:items-center">
          <p class="text-sm text-brand-dark font-medium">This is a quick lookup. Results are not saved.</p>
          <p class="mt-2 text-sm md:ml-6 md:mt-0">
            <%= link_to "Sign in to save lookups", new_user_session_path, class: "font-semibold text-primary hover:text-primary-hover transition-colors" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Product Details Card -->
    <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-100">
        <h3 class="text-base font-semibold text-brand-dark">Product Details</h3>
      </div>

      <div class="p-5">
        <% if @scrape_result[:status] == :failed && @scrape_result[:error].present? %>
          <div class="rounded-xl border border-primary/30 bg-primary/5 p-4 mb-4">
            <div class="flex items-start gap-3">
              <div class="inline-flex items-center justify-center rounded-xl bg-primary size-10 shrink-0">
                <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="pt-1">
                <p class="text-sm font-semibold text-brand-dark">Could not fetch product details</p>
                <p class="mt-1 text-sm text-gray-600"><%= @scrape_result[:error] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if @scrape_result[:status] == :partial %>
          <div class="rounded-xl border border-brand-orange/30 bg-brand-orange/10 p-4 mb-4">
            <div class="flex items-start gap-3">
              <div class="inline-flex items-center justify-center rounded-xl bg-brand-orange size-10 shrink-0">
                <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="pt-1">
                <p class="text-sm font-semibold text-brand-dark">Limited data extracted</p>
                <p class="mt-1 text-sm text-gray-600">Some product details couldn't be retrieved. The site may require JavaScript.</p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex gap-6">
          <% if @scrape_result[:image_url].present? %>
            <div class="shrink-0">
              <img src="<%= @scrape_result[:image_url] %>" alt="<%= @scrape_result[:title] %>" class="size-32 object-contain rounded-xl bg-gray-50 border border-gray-100">
            </div>
          <% end %>

          <div class="flex-1 min-w-0">
            <dl class="space-y-3">
              <% if @scrape_result[:title].present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Title</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= @scrape_result[:title] %></dd>
                </div>
              <% end %>

              <% if @scrape_result[:brand].present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Brand</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= @scrape_result[:brand] %></dd>
                </div>
              <% end %>

              <% if @scrape_result[:category].present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Category</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= @scrape_result[:category] %></dd>
                </div>
              <% end %>

              <% if @scrape_result[:price].present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Price</dt>
                  <dd class="mt-1 text-sm text-brand-dark">
                    <%= @scrape_result[:currency] == "GBP" ? "£" : @scrape_result[:currency] == "EUR" ? "€" : "$" %><%= @scrape_result[:price] %>
                  </dd>
                </div>
              <% end %>

              <% if @scrape_result[:material].present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Material</dt>
                  <dd class="mt-1 text-sm text-brand-dark"><%= @scrape_result[:material] %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <% if @scrape_result[:description].present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-700"><%= truncate(@scrape_result[:description], length: 500) %></dd>
          </div>
        <% end %>

        <div class="mt-4 pt-4 border-t border-gray-100">
          <a href="<%= @scrape_result[:url] %>" target="_blank" rel="noopener" class="inline-flex items-center text-sm text-primary hover:text-primary-hover transition-colors">
            <svg class="mr-1.5 size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View original product page
          </a>
        </div>
      </div>
    </div>

    <!-- Commodity Code Card -->
    <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-100">
        <h3 class="text-base font-semibold text-brand-dark">Commodity Code</h3>
      </div>

      <div class="p-5">
        <% if @suggestion && @suggestion[:commodity_code].present? %>
          <div class="flex items-start gap-4">
            <div class="inline-flex items-center justify-center rounded-xl bg-brand-mint size-12 shrink-0">
              <svg class="size-6 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Suggested Code</p>
              <p class="text-2xl font-bold text-brand-dark font-mono mt-1"><%= @suggestion[:commodity_code] %></p>
              <% if @suggestion[:confidence].present? %>
                <div class="mt-2 flex items-center gap-2">
                  <div class="flex-1 h-2 bg-gray-100 rounded-full overflow-hidden max-w-[120px]">
                    <div class="h-full bg-brand-mint rounded-full" style="width: <%= @suggestion[:confidence] * 100 %>%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-600"><%= number_to_percentage(@suggestion[:confidence] * 100, precision: 0) %> confidence</span>
                </div>
              <% end %>
            </div>
          </div>
          <% if @suggestion[:reasoning].present? %>
            <div class="mt-4 p-4 rounded-xl bg-highlight/30 border border-highlight">
              <p class="text-sm text-gray-700 leading-relaxed"><%= @suggestion[:reasoning] %></p>
            </div>
          <% end %>
          <% if @suggestion[:official_description].present? %>
            <p class="mt-3 text-sm text-gray-500">Official: <%= @suggestion[:official_description] %></p>
          <% end %>
        <% else %>
          <div class="text-center py-6">
            <div class="inline-flex items-center justify-center rounded-xl bg-gray-100 size-14 mb-4">
              <svg class="size-7 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="text-sm font-semibold text-brand-dark">No suggestion available</h3>
            <p class="mt-1 text-sm text-gray-500">We couldn't determine a commodity code for this product.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between">
      <%= link_to "Look up another product", new_product_lookup_path, class: "inline-flex items-center rounded-full border border-gray-200 bg-white px-5 py-2.5 text-sm font-semibold text-brand-dark hover:bg-gray-50 transition-colors" %>

      <% unless user_signed_in? %>
        <%= link_to new_user_registration_path, class: "inline-flex items-center rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover transition-colors" do %>
          Sign up to save lookups
        <% end %>
      <% end %>
    </div>
  </div>
</div>
