<div class="md:flex md:items-center md:justify-between mb-8">
  <div class="min-w-0 flex-1">
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol role="list" class="flex items-center space-x-2">
        <li>
          <%= link_to "Orders", orders_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
        </li>
        <li class="flex items-center">
          <svg class="size-5 shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
          </svg>
          <span class="ml-2 text-sm font-medium text-gray-500"><%= @order.retailer_name || "Order" %></span>
        </li>
      </ol>
    </nav>
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
      <%= @order.retailer_name || "Unknown retailer" %>
    </h2>
    <p class="mt-1 text-sm text-gray-500"><%= @order.order_reference || "No reference" %></p>
  </div>
  <div class="mt-4 flex md:ml-4 md:mt-0">
    <% case @order.status %>
    <% when "pending" %>
      <span class="inline-flex items-center rounded-full bg-yellow-100 px-3 py-1 text-sm font-medium text-yellow-800">Pending</span>
    <% when "in_transit" %>
      <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800">In Transit</span>
    <% when "delivered" %>
      <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800">Delivered</span>
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <!-- Order Items -->
  <div class="lg:col-span-2">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Items & Commodity Codes</h3>
      </div>
      <ul role="list" class="divide-y divide-gray-200">
        <% @order.order_items.each do |item| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= item.description %></p>
                <% if item.quantity && item.quantity > 1 %>
                  <p class="text-sm text-gray-500">Quantity: <%= item.quantity %></p>
                <% end %>
              </div>
            </div>

            <div class="mt-4">
              <% if item.commodity_code_confirmed? %>
                <div class="flex items-center">
                  <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                    <svg class="mr-1.5 size-4 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                    </svg>
                    <%= item.confirmed_commodity_code %>
                  </span>
                  <span class="ml-2 text-sm text-gray-500">Confirmed</span>
                </div>
              <% elsif item.suggested_commodity_code.present? %>
                <div class="rounded-md bg-yellow-50 p-3">
                  <div class="flex items-start">
                    <div class="shrink-0">
                      <svg class="size-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3 flex-1">
                      <h3 class="text-sm font-medium text-yellow-800">Suggested code: <%= item.suggested_commodity_code %></h3>
                      <% if item.commodity_code_confidence.present? %>
                        <p class="mt-1 text-sm text-yellow-700">Confidence: <%= number_to_percentage(item.commodity_code_confidence * 100, precision: 0) %></p>
                      <% end %>
                      <% if item.llm_reasoning.present? %>
                        <p class="mt-1 text-sm text-yellow-700"><%= item.llm_reasoning %></p>
                      <% end %>
                      <div class="mt-3">
                        <%= button_to "Confirm this code", confirm_commodity_code_order_path(@order, order_item_id: item.id, commodity_code: item.suggested_commodity_code), method: :post, class: "inline-flex items-center rounded-md bg-yellow-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% else %>
                <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-sm font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                  Awaiting classification
                </span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Sidebar: Delivery Info & Tracking -->
  <div class="lg:col-span-1 space-y-6">
    <!-- Delivery Info -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Delivery Information</h3>
      </div>
      <div class="px-4 py-5 sm:px-6">
        <dl class="space-y-4">
          <% if @order.estimated_delivery.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Expected delivery</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @order.estimated_delivery.strftime("%A, %d %B %Y") %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @order.created_at.strftime("%d %b %Y at %H:%M") %></dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Tracking Events -->
    <% if @order.tracking_events.any? %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex items-center justify-between">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Tracking</h3>
          <%= button_to "Refresh", refresh_tracking_order_path(@order), method: :post, class: "inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        </div>
        <div class="px-4 py-5 sm:px-6">
          <% @order.tracking_events.order(event_timestamp: :desc).each do |event| %>
            <div class="mb-4 last:mb-0">
              <div class="flex items-center justify-between mb-2">
                <span class="inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs font-medium text-gray-600">
                  <%= event.carrier&.titleize || "Unknown carrier" %>
                </span>
                <% if event.event_timestamp %>
                  <span class="text-xs text-gray-500"><%= event.event_timestamp.strftime("%d %b %H:%M") %></span>
                <% end %>
              </div>

              <p class="text-sm font-medium text-gray-900"><%= event.status %></p>
              <% if event.location.present? %>
                <p class="text-sm text-gray-500"><%= event.location %></p>
              <% end %>

              <% if event.tracking_url.present? %>
                <a href="<%= event.tracking_url %>" target="_blank" rel="noopener" class="mt-2 inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500">
                  <svg class="mr-1 size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Track on carrier site
                </a>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
