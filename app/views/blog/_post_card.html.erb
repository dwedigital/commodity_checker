<%= link_to blog_post_path(post.slug), class: "block py-6 group border-b border-gray-100 last:border-0" do %>
  <article>
    <div class="flex items-center gap-3 mb-2">
      <time datetime="<%= post.date.iso8601 %>" class="text-sm text-gray-500">
        <%= post.date.strftime("%B %d, %Y") %>
      </time>
      <% if post.tags.any? %>
        <% post.tags.first(2).each do |tag| %>
          <span class="inline-flex items-center rounded-full bg-highlight/50 px-2.5 py-0.5 text-xs font-medium text-brand-dark">
            <%= tag %>
          </span>
        <% end %>
      <% end %>
    </div>

    <h2 class="text-xl font-semibold text-brand-dark group-hover:text-primary transition-colors mb-2">
      <%= post.title %>
    </h2>

    <% if post.description.present? %>
      <p class="text-gray-600 line-clamp-2"><%= post.description %></p>
    <% end %>

    <div class="mt-3 flex items-center text-sm font-medium text-primary">
      Read more
      <svg class="ml-1 size-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    </div>
  </article>
<% end %>
