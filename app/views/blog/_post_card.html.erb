<%= link_to blog_post_path(post.slug), class: "block py-6 group" do %>
  <article>
    <time datetime="<%= post.date.iso8601 %>" class="text-sm text-gray-500">
      <%= post.date.strftime("%B %d, %Y") %>
    </time>

    <h2 class="text-xl font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors mt-1 mb-2">
      <%= post.title %>
    </h2>

    <% if post.description.present? %>
      <p class="text-gray-600 line-clamp-2"><%= post.description %></p>
    <% end %>

    <% if post.tags.any? %>
      <div class="mt-3 flex flex-wrap gap-2">
        <% post.tags.each do |tag| %>
          <span class="text-xs text-gray-500">#<%= tag %></span>
        <% end %>
      </div>
    <% end %>
  </article>
<% end %>
