<% content_for :title, "Blog - Tariffik" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Blog</h1>
    <p class="text-gray-600">Guides and insights about commodity codes and importing</p>
  </div>

  <% if @posts.empty? %>
    <p class="text-gray-500">No posts yet. Check back soon!</p>
  <% else %>
    <div class="divide-y divide-gray-100">
      <% @posts.each do |post| %>
        <%= render "post_card", post: post %>
      <% end %>
    </div>
  <% end %>
</div>
