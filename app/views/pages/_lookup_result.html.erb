<%= turbo_frame_tag "lookup_result" do %>
  <div class="mt-6">
    <% if @error.present? %>
      <!-- Error State -->
      <div class="rounded-2xl border border-primary/30 bg-primary/5 p-4">
        <div class="flex items-start gap-3">
          <div class="inline-flex items-center justify-center rounded-xl bg-primary size-10 shrink-0">
            <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="pt-1">
            <p class="text-sm text-brand-dark"><%= @error %></p>
          </div>
        </div>
      </div>

    <% elsif @scrape_result && @scrape_result[:status] == :failed %>
      <!-- Failed State -->
      <div class="rounded-2xl border border-primary/30 bg-primary/5 p-4">
        <div class="flex items-start gap-3">
          <div class="inline-flex items-center justify-center rounded-xl bg-primary size-10 shrink-0">
            <svg class="size-5 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="pt-1">
            <p class="text-sm font-semibold text-brand-dark">Could not fetch product details</p>
            <p class="mt-1 text-sm text-gray-600"><%= @scrape_result[:error] %></p>
          </div>
        </div>
      </div>

    <% elsif @scrape_result %>
      <!-- Success State -->
      <div class="rounded-2xl shadow-md bg-white overflow-hidden">
        <!-- Product Summary -->
        <div class="p-5 border-b border-gray-100">
          <div class="flex items-start gap-4">
            <% if @scrape_result[:image_url].present? %>
              <img src="<%= @scrape_result[:image_url] %>" alt="<%= @scrape_result[:title] %>" class="size-16 object-contain rounded-xl bg-gray-50 shrink-0 border border-gray-100">
            <% end %>
            <div class="flex-1 min-w-0">
              <% if @scrape_result[:title].present? %>
                <h3 class="text-base font-semibold text-brand-dark line-clamp-2"><%= @scrape_result[:title] %></h3>
              <% end %>
              <% if @scrape_result[:brand].present? || @scrape_result[:retailer_name].present? %>
                <p class="mt-1 text-sm text-gray-500">
                  <%= [@scrape_result[:brand], @scrape_result[:retailer_name]&.titleize].compact.join(" - ") %>
                </p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Commodity Code Result -->
        <div class="p-5">
          <% if @suggestion && @suggestion[:commodity_code].present? %>
            <div class="flex items-start gap-4">
              <div class="inline-flex items-center justify-center rounded-xl bg-brand-mint size-12 shrink-0">
                <svg class="size-6 text-brand-dark" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Suggested Commodity Code</p>
                <p class="text-2xl font-bold text-brand-dark font-mono mt-1"><%= @suggestion[:commodity_code] %></p>
                <% if @suggestion[:confidence].present? %>
                  <div class="mt-2 flex items-center gap-2">
                    <div class="flex-1 h-2 bg-gray-100 rounded-full overflow-hidden max-w-[120px]">
                      <div class="h-full bg-brand-mint rounded-full" style="width: <%= @suggestion[:confidence] * 100 %>%"></div>
                    </div>
                    <span class="text-sm font-medium text-gray-600"><%= number_to_percentage(@suggestion[:confidence] * 100, precision: 0) %> confidence</span>
                  </div>
                <% end %>
              </div>
            </div>
            <% if @suggestion[:reasoning].present? %>
              <div class="mt-4 p-4 rounded-xl bg-highlight/30 border border-highlight">
                <p class="text-sm text-gray-700 leading-relaxed"><%= @suggestion[:reasoning] %></p>
              </div>
            <% end %>
          <% else %>
            <div class="flex items-start gap-4">
              <div class="inline-flex items-center justify-center rounded-xl bg-brand-orange size-12 shrink-0">
                <svg class="size-6 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="pt-1">
                <p class="text-base font-semibold text-brand-dark">Could not determine commodity code</p>
                <p class="mt-1 text-sm text-gray-500">Try a different product URL or check the product page</p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- CTA Section -->
        <% unless user_signed_in? %>
          <div class="bg-brand-dark p-5">
            <div class="flex items-center justify-between gap-4">
              <div class="min-w-0">
                <p class="text-sm font-semibold text-white">Save your lookups</p>
                <p class="text-sm text-white/70">Sign up to save products and track orders</p>
              </div>
              <%= link_to "Sign up free", new_user_registration_path, class: "shrink-0 rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- View Original Link -->
      <div class="mt-4 text-center">
        <a href="<%= @scrape_result[:url] %>" target="_blank" rel="noopener" class="inline-flex items-center text-sm text-gray-500 hover:text-brand-dark transition-colors">
          <svg class="mr-1.5 size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          View original product
        </a>
      </div>
    <% end %>
  </div>
<% end %>
