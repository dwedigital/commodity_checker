<footer class="bg-white border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
      <!-- Logo and tagline -->
      <div class="flex flex-col items-center md:items-start">
        <span class="text-brand-dark font-bold text-xl tracking-tight">TARIFFIK</span>
        <p class="mt-2 text-sm text-gray-500">Never guess a code again</p>
      </div>

      <!-- Links -->
      <div class="flex flex-wrap justify-center gap-x-8 gap-y-2">
        <%= link_to "Blog", blog_path, class: "text-sm text-gray-600 hover:text-brand-dark transition-colors" %>
        <%= link_to "Privacy", privacy_path, class: "text-sm text-gray-600 hover:text-brand-dark transition-colors" %>
        <%= link_to "Terms", terms_path, class: "text-sm text-gray-600 hover:text-brand-dark transition-colors" %>
        <%= link_to "Contact", "mailto:hello@tariffik.com", class: "text-sm text-gray-600 hover:text-brand-dark transition-colors" %>
      </div>

      <!-- Copyright -->
      <div class="text-center md:text-right">
        <p class="text-sm text-gray-500">
          &copy; <%= Date.current.year %> Tariffik
        </p>
        <p class="text-xs text-gray-400 mt-1">
          Based in Jersey, Channel Islands
        </p>
      </div>
    </div>
  </div>
</footer>
