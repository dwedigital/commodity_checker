<!DOCTYPE html>
<html class="h-full bg-gray-50">
  <head>
    <title><%= content_for(:title) || "Tariffik" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <div class="min-h-full">
      <!-- Navigation -->
      <nav class="bg-indigo-600" data-controller="mobile-menu">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <div class="flex items-center">
              <div class="shrink-0">
                <%= link_to root_path, class: "text-white font-bold text-xl" do %>
                  Tariffik
                <% end %>
              </div>
              <% if user_signed_in? %>
                <div class="hidden md:block">
                  <div class="ml-10 flex items-baseline space-x-4">
                    <%= link_to "Dashboard", dashboard_path, class: "rounded-md px-3 py-2 text-sm font-medium #{request.path == dashboard_path ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
                    <%= link_to "Lookup", product_lookups_path, class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?('/product_lookups') ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
                    <%= link_to "Orders", orders_path, class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?('/orders') ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="hidden md:block">
              <div class="ml-4 flex items-center md:ml-6">
                <% if user_signed_in? %>
                  <span class="text-indigo-100 text-sm mr-4"><%= current_user.email %></span>
                  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "rounded-md bg-indigo-500 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-400" %>
                <% else %>
                  <%= link_to "Sign in", new_user_session_path, class: "rounded-md px-3 py-2 text-sm font-medium text-indigo-100 hover:bg-indigo-500 hover:text-white" %>
                  <%= link_to "Sign up", new_user_registration_path, class: "ml-2 rounded-md bg-indigo-500 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-400" %>
                <% end %>
              </div>
            </div>
            <!-- Mobile menu button -->
            <div class="flex md:hidden">
              <button type="button" data-action="click->mobile-menu#toggle" class="inline-flex items-center justify-center rounded-md p-2 text-indigo-200 hover:bg-indigo-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600">
                <span class="sr-only">Open main menu</span>
                <!-- Hamburger icon -->
                <svg data-mobile-menu-target="openIcon" class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
                <!-- Close icon (hidden by default) -->
                <svg data-mobile-menu-target="closeIcon" class="hidden size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Mobile menu panel -->
        <div data-mobile-menu-target="menu" class="hidden md:hidden">
          <div class="space-y-1 px-2 pb-3 pt-2">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_path, class: "block rounded-md px-3 py-2 text-base font-medium #{request.path == dashboard_path ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
              <%= link_to "Lookup", product_lookups_path, class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?('/product_lookups') ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
              <%= link_to "Orders", orders_path, class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?('/orders') ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500 hover:text-white'}" %>
            <% end %>
          </div>
          <div class="border-t border-indigo-500 pb-3 pt-4">
            <% if user_signed_in? %>
              <div class="px-4">
                <div class="text-base font-medium text-white truncate"><%= current_user.email %></div>
              </div>
              <div class="mt-3 space-y-1 px-2">
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left rounded-md px-3 py-2 text-base font-medium text-indigo-100 hover:bg-indigo-500 hover:text-white" %>
              </div>
            <% else %>
              <div class="space-y-1 px-2">
                <%= link_to "Sign in", new_user_session_path, class: "block rounded-md px-3 py-2 text-base font-medium text-indigo-100 hover:bg-indigo-500 hover:text-white" %>
                <%= link_to "Sign up", new_user_registration_path, class: "block rounded-md px-3 py-2 text-base font-medium text-indigo-100 hover:bg-indigo-500 hover:text-white" %>
              </div>
            <% end %>
          </div>
        </div>
      </nav>

      <!-- Flash messages -->
      <% if notice.present? %>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="shrink-0">
                <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= notice %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="shrink-0">
                <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= alert %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Main content -->
      <main>
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
