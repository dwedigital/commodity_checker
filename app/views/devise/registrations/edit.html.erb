<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <span class="inline-flex items-center rounded-full bg-brand-dark px-4 py-1.5 text-sm font-semibold text-white mb-4">
        SETTINGS
      </span>
    </div>
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-brand-dark">Account settings</h2>
    <p class="mt-2 text-center text-sm text-gray-600">Update your email or password below.</p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 rounded-2xl border border-gray-200 sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="rounded-xl border border-primary/30 bg-primary/5 p-4">
            <div class="flex">
              <div class="shrink-0">
                <div class="inline-flex items-center justify-center rounded-lg bg-primary size-8">
                  <svg class="size-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-brand-dark"><%= pluralize(resource.errors.count, "error") %> occurred:</h3>
                <div class="mt-2 text-sm text-gray-600">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-sm text-brand-orange">
              Waiting for confirmation of: <%= resource.unconfirmed_email %>
            </p>
          <% end %>
        </div>

        <div data-controller="password-strength">
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <p class="text-xs text-gray-500">Leave blank if you don't want to change it</p>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", data: { password_strength_target: "input", action: "input->password-strength#validate" }, class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
          <div class="mt-3 p-3 rounded-xl bg-highlight/30 border border-highlight text-sm text-gray-600">
            <p class="mb-2 font-medium text-brand-dark">Password must contain:</p>
            <ul class="list-none space-y-1">
              <li class="flex items-center gap-2" data-password-strength-target="length">
                <span class="text-gray-400" data-password-strength-target="lengthIcon">○</span>
                <span>At least 8 characters</span>
              </li>
              <li class="flex items-center gap-2" data-password-strength-target="uppercase">
                <span class="text-gray-400" data-password-strength-target="uppercaseIcon">○</span>
                <span>One uppercase letter</span>
              </li>
              <li class="flex items-center gap-2" data-password-strength-target="lowercase">
                <span class="text-gray-400" data-password-strength-target="lowercaseIcon">○</span>
                <span>One lowercase letter</span>
              </li>
              <li class="flex items-center gap-2" data-password-strength-target="digit">
                <span class="text-gray-400" data-password-strength-target="digitIcon">○</span>
                <span>One digit</span>
              </li>
            </ul>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <p class="text-xs text-gray-500">Required to confirm changes</p>
          <div class="mt-2">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
        </div>

        <div>
          <%= f.submit "Update account", class: "flex w-full justify-center rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-[480px]">
      <div class="bg-white px-6 py-8 rounded-2xl border border-gray-200 sm:px-12">
        <h3 class="text-lg font-semibold text-brand-dark">Delete account</h3>
        <p class="mt-2 text-sm text-gray-600">Once you delete your account, all your data will be permanently removed. This action cannot be undone.</p>
        <div class="mt-4">
          <%= button_to "Delete my account", registration_path(resource_name), method: :delete, data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." }, class: "inline-flex justify-center rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-colors cursor-pointer" %>
        </div>
      </div>
    </div>

    <p class="mt-10 text-center text-sm text-gray-500">
      <%= link_to "Back to dashboard", root_path, class: "font-semibold leading-6 text-primary hover:text-primary-hover transition-colors" %>
    </p>
  </div>
</div>
