<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <span class="inline-flex items-center rounded-full bg-brand-mint/50 px-4 py-1.5 text-sm font-semibold text-brand-dark mb-4">
        WELCOME BACK
      </span>
    </div>
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-brand-dark">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 rounded-2xl border border-gray-200 sm:px-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-brand-dark" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "current-password", class: "block w-full rounded-xl border border-gray-200 py-2.5 text-brand-dark placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 px-4" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary" %>
              <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-brand-dark" %>
            </div>

            <div class="text-sm leading-6">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-semibold text-primary hover:text-primary-hover transition-colors" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "flex w-full justify-center rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white hover:bg-primary-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <p class="mt-10 text-center text-sm text-gray-500">
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold leading-6 text-primary hover:text-primary-hover transition-colors" %>
    </p>
  </div>
</div>
